@using BooksBlazorWasm.Shared.Model

<div class="col-1 col-sm-3 col-md-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Author</p>
            <div class="d-flex justify-content-between align-items-center">
                <button type="button" class="btn btn-outline-dark shadow-none" @onclick='()=>Model.Like()'>👍 Like</button>
                <small class="text-muted">@Model.Likes Likes</small>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Book Model { get; set; }
}